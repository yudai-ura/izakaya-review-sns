
<div class="container">
<%= link_to '一覧に戻る', reviews_path %>
<h2>新規レビュー投稿</h2>
<%= form_with(model: @review, local: true) do |f| %>
  <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :title, '【タイトル(最大25字)】' %>
    <%= f.text_field :title, class: 'form-control title-form', rows: 1 %> 
    <%= f.label :content, '【レビュー文(最大1000字)】' %>
    <%= f.text_area :content, class: 'form-control content-form', rows: 10 %>
          
    <%= f.label :point, '【評価点（0 ~ 100）】' %>
    <%= f.text_field :point, class: 'form-control point-form', rows: 1 %>
    <%= f.label "【画像をアップロード】" %><br><%= f.file_field :image, class:"btn btn-outline-secondary" %>
          
    <div class="margin-top-50">
      <%= f.label :category, '【カテゴリ(複数選択可)】' %><br>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="margin-bottom-50">
  <%= f.submit 'レビューを投稿する', class: 'btn btn-primary' %>
 </div>
<% end %>
</div>