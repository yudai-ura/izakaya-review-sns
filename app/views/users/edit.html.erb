<h1><%= @user.name %> のプロフィール編集ページ</h1>

<%= form_with(model: @user, local: true) do |f| %>
  
  <% if @user.errors.any? %>
    
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
   
      <% end %>
  
  
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name, class: 'form-control', rows: 1 %> 
  
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email, class: 'form-control', rows: 1 %>
  
  <%= f.label :profile, 'プロフィール文' %>
  <%= f.text_area :profile, class: 'form-control', rows: 4 %>
  <%= f.label "アイコン画像をアップロード" %><br><%= f.file_field :myimage %>


  <%= f.submit '編集を保存' %>
<% end %>

