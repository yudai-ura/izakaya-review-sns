<div class="profile-box">
<%= link_to '一覧に戻る', reviews_path %>


    
 
    <div>
      <div class="user-name">
        <% if user.myimage? %>
          <%= image_tag user.myimage.thumb100.url, class: 'myimage'  %>
        <% end %>
    
        <span>  <%= user.name %>  さんのページ</span>
       </div>
       
       <% if logged_in? %>
       <div class='profile-btn'>
           <% if current_user == user %>
           <%= link_to 'レビュー投稿', new_review_path, class: 'btn btn btn-warning' %>
            <%= link_to 'プロフィール編集', edit_user_path(user), class: 'btn  btn-secondary' %>
            
          
          <% else %>
            <%= render 'relationships/follow_button', user: @user %>
          <% end %>
        
          <% end %>
       </div>
       
       
       <div class='user-profile'><p>【プロフィール】</p><%= simple_format(user.profile) %></div>
      
   </div> 
 
  