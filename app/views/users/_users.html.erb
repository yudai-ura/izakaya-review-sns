<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class="user-box">
          <div>
            <% if user.myimage? %>
              <%= image_tag user.myimage.thumb50.url %>
            <% end %>
            <%= user.name %>
          </div>
          <div>
          
          <%= user.profile %>
          </div>
          <div>
            <p><%= link_to 'ユーザーページ', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  
<% end %>